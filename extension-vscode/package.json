{
    "name": "ricochet",
    "displayName": "Ricochet",
    "description": "Ricochet is the first hybrid coding agent that lives in your IDE and your pocket. Code autonomously with a powerful VS Code assistant, then switch to Ether Mode to control your development environment remotely via messenger. Build, debug, and deploy from anywhere.",
    "version": "0.0.1",
    "publisher": "grik",
    "icon": "assets/ricochet.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Grik-ai/ricochet.git"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Machine Learning",
        "Chat"
    ],
    "keywords": [
        "ai",
        "coding",
        "assistant",
        "telegram",
        "live-mode",
        "agent"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ricochet-sidebar",
                    "title": "Ricochet",
                    "icon": "assets/icon.svg"
                }
            ]
        },
        "views": {
            "ricochet-sidebar": [
                {
                    "type": "webview",
                    "id": "ricochet.chatView",
                    "name": "Ricochet Chat",
                    "icon": "assets/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "ricochet.newChat",
                "title": "New Task",
                "icon": "$(plus)"
            },
            {
                "command": "ricochet.toggleLiveMode",
                "title": "Toggle Live Mode",
                "icon": "assets/voice.svg"
            },
            {
                "command": "ricochet.openAgent",
                "title": "Open Agent",
                "icon": "$(robot)"
            },
            {
                "command": "ricochet.openHistory",
                "title": "Open History",
                "icon": "$(history)"
            },
            {
                "command": "ricochet.openSettings",
                "title": "Open Settings",
                "icon": "$(settings-gear)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "ricochet.newChat",
                    "group": "navigation@10",
                    "when": "view == ricochet.chatView"
                },
                {
                    "command": "ricochet.toggleLiveMode",
                    "group": "navigation@20",
                    "when": "view == ricochet.chatView"
                },
                {
                    "command": "ricochet.openAgent",
                    "group": "navigation@30",
                    "when": "view == ricochet.chatView"
                },
                {
                    "command": "ricochet.openHistory",
                    "group": "navigation@40",
                    "when": "view == ricochet.chatView"
                },
                {
                    "command": "ricochet.openSettings",
                    "group": "navigation@50",
                    "when": "view == ricochet.chatView"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && npm run copy-wasm",
        "watch": "npm run build -- --watch",
        "copy-wasm": "cp node_modules/tree-sitter-wasms/out/*.wasm dist/",
        "lint": "eslint src --ext ts",
        "test": "vitest"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "esbuild": "^0.19.8",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2",
        "vitest": "^1.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.1",
        "chokidar": "^5.0.0",
        "delay": "^7.0.0",
        "fast-deep-equal": "^3.1.3",
        "p-wait-for": "^6.0.0",
        "reconnecting-eventsource": "^1.6.4",
        "simple-git": "^3.30.0",
        "zod": "^4.3.5",
        "web-tree-sitter": "^0.22.6",
        "tree-sitter-wasms": "^0.1.11"
    }
}