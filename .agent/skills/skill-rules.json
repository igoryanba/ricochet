{
    "backend-dev-guidelines": {
        "type": "domain",
        "enforcement": "suggest",
        "priority": "high",
        "description": "Triggered when working on Backend Go code.",
        "promptTriggers": {
            "keywords": [
                "backend",
                "controller",
                "service",
                "API",
                "endpoint",
                "handler"
            ],
            "intentPatterns": [
                "(create|add).*?(route|endpoint|controller)",
                "(how to|best practice).*?(backend|API)"
            ]
        },
        "fileTriggers": {
            "pathPatterns": [
                "core/internal/**/*.go",
                "backend/**/*.go"
            ],
            "contentPatterns": [
                "package agent",
                "import \"net/http\""
            ]
        }
    },
    "frontend-guidelines": {
        "type": "domain",
        "enforcement": "suggest",
        "priority": "medium",
        "description": "Triggered when working on React Frontend.",
        "promptTriggers": {
            "keywords": [
                "react",
                "component",
                "hook",
                "webview",
                "tsx"
            ],
            "intentPatterns": [
                "(create|update).*?(component|ui)"
            ]
        },
        "fileTriggers": {
            "pathPatterns": [
                "webview/src/**/*.tsx",
                "webview/src/**/*.ts"
            ]
        }
    }
}